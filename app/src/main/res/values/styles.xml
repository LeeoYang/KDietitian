<resources>

    <!-- Base application theme. -->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Base.Widget.AppCompat.Toolbar</item>
    </style>

    <style name="GreenButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/green_btn_mtrl</item>
    </style>

    <style name="GrayButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/gray_btn_mtrl</item>
    </style>
    <style name="NoActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="NoActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
